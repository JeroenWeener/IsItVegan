<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/state_1"
        motion:constraintSetEnd="@id/state_2"
        motion:duration="250">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/view2"
            motion:touchAnchorSide="top" />
    </Transition>

    <Transition
        motion:constraintSetStart="@id/state_1"
        motion:constraintSetEnd="@id/state_3"
        motion:duration="250">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/view2"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/state_1">
        <Constraint android:id="@id/view1">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                motion:layout_constraintTop_toTopOf="parent"
            />
        </Constraint>
        <Constraint android:id="@id/view2">
            <Layout
                motion:layout_constraintTop_toBottomOf="@id/view1"
                motion:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_2">
        <Constraint android:id="@id/view1">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            />
        </Constraint>
        <Constraint android:id="@id/view2">
            <Layout
                motion:layout_constraintTop_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
            />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/state_3">
        <Constraint android:id="@id/view1">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toTopOf="parent"
                />
        </Constraint>
        <Constraint android:id="@id/view2">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </Constraint>
    </ConstraintSet>
</MotionScene>