<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preference_category_ui">

        <ListPreference
            app:icon="@drawable/lens"
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/setting_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_category_language">

        <ListPreference
            app:icon="@drawable/language"
            app:defaultValue="system"
            app:entries="@array/app_language_entries"
            app:entryValues="@array/app_language_values"
            app:key="language_app"
            app:title="@string/setting_language_app"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:icon="@drawable/short_text"
            app:defaultValue="app"
            app:entries="@array/ingredients_language_entries"
            app:entryValues="@array/ingredients_language_values"
            app:key="language_ingredients"
            app:title="@string/setting_language_ingredients"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_category_info">
        <Preference
            app:icon="@drawable/info"
            app:title="@string/title_about"
            app:key="about_button"
        />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preference_category_other">
        <Preference
            app:icon="@drawable/share"
            app:title="@string/setting_share_app"
            app:key="share_app_button"
        />

        <Preference
            app:icon="@drawable/slideshow"
            app:title="@string/setting_open_introduction"
            app:key="introduction_button"
        />
    </PreferenceCategory>

    <Preference
        app:icon="@drawable/slideshow"
        app:title="@string/setting_build_version"
        app:key="build_version_button"
    />

</PreferenceScreen>