<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/action_bar_button_close"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:visibility="invisible"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/close_white" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/logo_white"
        android:textSize="20sp"
    />

    <ImageButton
        android:id="@+id/action_bar_button_torch"
        android:visibility="invisible"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"
        android:src="@drawable/flash_off_white" />

    <ImageButton
        android:id="@+id/action_bar_button_settings"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/settings_white" />
</RelativeLayout>
