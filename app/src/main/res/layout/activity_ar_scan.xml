<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jwindustries.isitvegan.activities.ARScanActivity">

    <!--
    SurfaceView is initially 'hidden'. Since hiding the view halts
    rendering of the view altogether, we need to hide it without really
    hiding it. This is why we set 1 dp as dimensions. As soon as the content
    in the surface view is rendered, we set the dimensions to match_parent.
    -->
    <android.opengl.GLSurfaceView
        android:id="@+id/surface_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
