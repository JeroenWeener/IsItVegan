    <Transition
        motion:constraintSetStart="@id/preview_state"
        motion:constraintSetEnd="@id/scroll_state"
        motion:duration="250">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/ingredient_list_fragment"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/preview_state">
        <Constraint android:id="@id/ingredient_list_fragment">
            <Layout
                android:layout_marginTop="200dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
            />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/scanning_state">
        <Constraint android:id="@id/ingredient_list_fragment"
            android:layout_height="match_parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="parent">
            <Layout
                android:layout_marginTop="1000dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
            />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/scroll_state">
        <Constraint android:id="@id/ingredient_list_fragment">
            <Layout
                android:layout_marginTop="0dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
            />
        </Constraint>
    </ConstraintSet>
</MotionScene>